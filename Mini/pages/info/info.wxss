page{
	width:100%;
	font-size:15px;
}
.container{
	width:100%;
	height: 100%;  
    display: flex;  
    flex-direction: column;  
    padding-top: 10px;  
    box-sizing: border-box;  
    background-color: #fff; 
}
.list{
	width:95%;
	height:auto;
	border:1px solid #eee;
	margin-bottom:5px;
}
.title-top{
	height:45rpx;
	width:99%;
	background:#eee;
	color:#555;
	font-size:15px;
	padding-left:5px;
}
.content{
	width:100%;
	height:auto;
}
.line{
	width:100%;
	height:auto;
	display:inline-block;
	border-bottom:1px solid #eee;
	background:#fff;
    padding-top:4px;
}
.tleft{
	width:50%;
	padding-left:10px;
}
.tright{
	width:50%;
	height:100%;
	float:right;
}
.title-bottom{
    display:flex;
	height:55rpx;	
	background:#76B9ED;
	color:#555;
	font-size:15px;
}
.img{
	width:45rpx;
	height:45rpx;
	padding-left:30%;
}
