page{
	width:100%;
	background:#fff;
}
.container{
	width:100%;
    height: 100%;  
    display: flex;  
    flex-direction: column;  
    padding-top: 12px;  
    box-sizing: border-box;  
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #abcdef;
  width:100%;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:1px solid #000;
}
.userinfo-nickname {
  color: #fff;
}
.list{
	width:98%;
	margin-top:5px;
}
.line{
	width:100%;
	height:28px;
	display:inline-block;
	margin-bottom:1px;
	border:1px solid #fff;
	background:#f2f2f2;
    padding-top:4px;
}
.tleft{
	width:50%;
	padding-left:10px;
}
.tright{
	width:50%;
	height:100%;
	float:right;
}