page{
    width:100%;
    font-family:"Serif";
    background-color: #fff;
}
.container{
    width:100%;
    height: 100%;  
    display: flex;  
    flex-direction: column;  
    padding-top: 12px;  
    box-sizing: border-box;    
}
.login-item{
    width: 95%;
    margin-top: 30rpx;
    border-bottom: 1px solid #eee;
    flex-grow:1;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-bottom: 20rpx;
}

 .bottom{
     border-bottom: 0px;
}

.login-item-info{
    font-size: 16px;
    color: #000;
    padding-bottom: 20rpx;
}
.passwd{
	font-size:14px;
    background:#f2f2f2;
}