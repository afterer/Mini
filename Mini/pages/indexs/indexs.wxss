page{
	width:100%;
	background-color: #f2f2f2;
}
.container{
    width:100%;
    height: 100%;  
    display: flex;  
    flex-direction: column;  
    padding-top: 12px;  
    box-sizing: border-box;    
}
.canvas{
    width:95%;
    height:200px;
    background:#fff;
}
.updatebtn{
    position: relative; 
    top:20%;
}
.swiper-tab { 
     width:100%;
     height: auto; 
     background: #fff; 
     display: flex; 
     position: absolute; 
     z-index: 2; 
     flex-direction: row; 
     justify-content: center; 
     align-items: center; 
     border-top: 1px solid #ccc; 
     bottom:0px;
} 
.swiper-tab-list { 
     display:block;
     padding: 4px 0; 
     font-size: 28rpx; 
     font-family: Helvetica;
     width:50%;
     height:auto; 
} 
.active { 
     /*border-bottom: 1px solid #FFCC00;*/
     color: #FFCC00; 
} 
.totext{
    text-align: center;
}
.swiper-tab-img { 
    text-align: center; 
} 
.img { 
     width:23px; 
     height: 23px; 
} 