page{
  width:100%;
}
.container{
  width:100%;
  height: auto;  
  display: flex;  
  flex-direction: column;  
  padding-top: 12px;  
  box-sizing: border-box;  
  background-color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #76B9ED;
  width:100%;
}
.account-bg {
  width: 100%;
  height: 80rpx;
}
.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:1px solid #000;
}
.userinfo-nickname {
  color: #fff;
}
.tonav{
  display:flex;
  height:10px;
  width:100%;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
  width:100%;
  margin-top:10px;
  background:#f2f2f2;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 16px;
  margin-left: 20rpx;
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}
.swiper-tab { 
     width:100%;
     height: auto; 
     background: #fff; 
     display: flex; 
     position: absolute; 
     z-index: 2; 
     flex-direction: row; 
     justify-content: center; 
     align-items: center; 
     border-top: 1px solid #ccc; 
     bottom:0px;
} 
.swiper-tab-list { 
     display:block;
     padding: 4px 0; 
     font-size: 28rpx; 
     font-family: Helvetica;
     width:50%;
     height:auto; 
} 
.active { 
     /*border-bottom: 1px solid #FFCC00;*/
     color: #FFCC00; 
} 
.totext{
    text-align: center;
}
.swiper-tab-img { 
    text-align: center; 
} 
.img { 
     width:23px; 
     height: 23px; 
} 
